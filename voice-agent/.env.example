# LiveKit Cloud Configuration
# Sign up at https://cloud.livekit.io (free tier: 1,000 min/mo)
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# Voice AI Providers
OPENAI_API_KEY=your-openai-key
DEEPGRAM_API_KEY=your-deepgram-key
CARTESIA_API_KEY=your-cartesia-key

# Twilio (for phone calls & SMS)
# Get credentials at https://console.twilio.com
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Mautic CRM
# Your Mautic instance URL and OAuth access token
MAUTIC_API_URL=https://your-mautic-instance.com
MAUTIC_ACCESS_TOKEN=your-mautic-oauth-token

# Google Calendar (for booking appointments)
# Path to your OAuth credentials file
GOOGLE_CREDENTIALS_PATH=./google_creds.json
